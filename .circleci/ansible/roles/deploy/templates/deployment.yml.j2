apiVersion: apps/v1
kind: Deployment
metadata:
  name: udacity-devops-capstone-deployment
  labels:
    app: udacity-devops-capstone
spec:
  replicas: 2
  selector:
    matchLabels:
      app: udacity-devops-capstone
  template:
    metadata:
      labels:
        app: udacity-devops-capstone
    spec:
      containers:
      - name: udacity-devops-capstone
        image: tam892007/udacity-devops-capstone:latest
        ports:
        - containerPort: 80
        env:
        - name: ASPNETCORE_ENVIRONMENT
          value: {{ aspnet_env }}
        - name: ASPNETCORE_URLS
          value: {{ aspnet_urls }}
        - name: App__SelfUrl
          value: {{ url }}
        - name: App__RedirectAllowedUrls
          value: {{ url }}
        - name: AuthServer__Authority
          value: {{ url }}
        - name: ConnectionStrings__Default
          value: {{ connection_string }}

---
apiVersion: v1
kind: Service
metadata:
  name: udacity-devops-capstone-service
spec:
  type: NodePort
  selector:
    app: udacity-devops-capstone
  ports:
    - port: 80
      targetPort: 80
      # By default and for convenience, the Kubernetes control plane will allocate a port from a range (default: 30000-32767)
      nodePort: {{ node_port }}

---
apiVersion: networking.k8s.io/v1
kind: Ingress
metadata:
  name: udacity-devops-capstone-ingress
  annotations:
    nginx.ingress.kubernetes.io/rewrite-target: /$1
    nginx.ingress.kubernetes.io/affinity: "cookie"
    nginx.ingress.kubernetes.io/session-cookie-name: "stickounet"
    nginx.ingress.kubernetes.io/session-cookie-expires: "172800"
    nginx.ingress.kubernetes.io/session-cookie-max-age: "172800"
spec:
  rules:
  - http:
      paths:
      - path: /
        pathType: Prefix
        backend:
          service:
            name: udacity-devops-capstone-service
            port:
              number: 80